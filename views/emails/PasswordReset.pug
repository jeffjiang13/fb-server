extend baseEmail

block content
    .headLogo
        img(src="https://res.cloudinary.com/dw8k3b8h7/image/upload/v1685480308/2021_Facebook_icon_mwgc3k.svg" alt="" style="width: 30px")
        span Action required : You have requested to reset your password
    p Hello #{firstname},
    p We have received a request to reset your facebook password Enter the following password reset code:
    table(role='presentation' border='0' cellpadding='0' cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation' border='0' cellpadding='0' cellspacing='0')
                        tbody
                            tr
                                td.code= url

    p
        strong Did you request this change?
    p If you have not requested a new password, please ignore this
    p - Jeff Jiang, CEO
